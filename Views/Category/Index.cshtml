@model List<Category>

<h1>Category List</h1>

<div class="container mb-4 mt-4">
    <div class="row">
        <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
            <i class="bi bi-plus-square"></i>   Add a new Category
        </a>
    </div>
</div>
<div>


</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>

        <th>
            Category DisplayOrder
        </th>

            <th>
              Edit
            </th>

            <th>
                Delete
            </th>
    </tr>
    </thead>
    <tbody>
     @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {

            <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-fill"></i> Edit
                </a>
            </td>

                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>